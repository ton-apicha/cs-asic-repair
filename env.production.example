#--------------------------------------------------------------------
# ASIC Repair Management System - Production Environment Template
# 
# Copy this file to .env and configure for your production environment:
# cp env.production.example .env
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'https://your-domain.com/'
app.indexPage = ''
app.forceGlobalSecureRequests = true

# SESSION
app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionCookieName = 'asic_session'
app.sessionExpiration = 7200
app.sessionSavePath = '/var/www/html/writable/session'
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = true

# COOKIE
app.cookiePrefix = ''
app.cookieDomain = ''
app.cookiePath = '/'
app.cookieSecure = true
app.cookieHTTPOnly = true
app.cookieSameSite = 'Lax'

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
database.default.hostname = db
database.default.database = asic_repair_db
database.default.username = asic_user
database.default.password = CHANGE_THIS_STRONG_PASSWORD
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

# Database connection settings
database.default.pConnect = false
database.default.DBDebug = false
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_unicode_ci

# Docker MySQL root password
DB_ROOT_PASSWORD = CHANGE_THIS_ROOT_PASSWORD

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
# IMPORTANT: Generate a new key using: php spark key:generate
encryption.key = CHANGE_THIS_32_CHARACTER_KEY_HERE

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------
security.csrfProtection = 'session'
security.tokenRandomize = true
security.tokenName = 'csrf_token'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie'
security.expires = 7200
security.regenerate = true
security.redirect = true

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
logger.threshold = 4

#--------------------------------------------------------------------
# TIMEZONE & LOCALE
#--------------------------------------------------------------------
app.timezone = 'Asia/Bangkok'
app.defaultLocale = 'th'
app.negotiateLocale = true
app.supportedLocales = ['en', 'th', 'zh']

